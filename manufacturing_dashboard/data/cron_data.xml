<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Cron job for automatic data synchronization - Optimized for parallel processing -->
        <record id="cron_sync_machines" model="ir.cron">
            <field name="name">Manufacturing: Sync Machine Data (Optimized)</field>
            <field name="model_id" ref="manufacturing_dashboard.model_manufacturing_machine_config"/>
            <field name="state">code</field>
            <field name="code">model.sync_all_machines()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="active">True</field>
            <field name="priority">5</field>
        </record>

        <!-- Cron job for daily statistics calculation -->
        <record id="cron_daily_stats" model="ir.cron">
            <field name="name">Manufacturing: Calculate Daily Statistics</field>
            <field name="model_id" ref="manufacturing_dashboard.model_manufacturing_part_quality"/>
            <field name="state">code</field>
            <field name="code">model.calculate_daily_stats()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>

        <!-- Cron job for final station continuous monitoring - DISABLED: Using direct monitoring instead -->
        <record id="cron_final_station_continuous_monitoring" model="ir.cron">
            <field name="name">Final Station Continuous Monitoring (DISABLED)</field>
            <field name="model_id" ref="manufacturing_dashboard.model_manufacturing_machine_config"/>
            <field name="state">code</field>
            <field name="code">model.continuous_final_station_monitoring()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="active">False</field>
            <field name="priority">1</field>
        </record>

        <!-- Cron job for final station status update -->
        <record id="cron_final_station_status_update" model="ir.cron">
            <field name="name">Final Station Status Update</field>
            <field name="model_id" ref="manufacturing_dashboard.model_manufacturing_machine_config"/>
            <field name="state">code</field>
            <field name="code">model.final_station_status_update()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active">True</field>
            <field name="priority">2</field>
        </record>

        <!-- Cron job to initialize PLC monitoring on startup -->
        <record id="cron_initialize_plc_monitoring" model="ir.cron">
            <field name="name">Initialize PLC Monitoring on Startup</field>
            <field name="model_id" ref="manufacturing_dashboard.model_manufacturing_machine_config"/>
            <field name="state">code</field>
            <field name="code">model.initialize_plc_monitoring_on_startup()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active">True</field>
            <field name="priority">10</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(minutes=2)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>

    </data>
</odoo>