<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Machine Configuration Tree View -->
    <record id="view_machine_config_list" model="ir.ui.view">
        <field name="name">machine.config.list</field>
        <field name="model">manufacturing.machine.config</field>
        <field name="arch" type="xml">
            <list decoration-success="status=='running'" decoration-danger="status=='error'"
                  decoration-warning="status=='maintenance'" decoration-muted="status=='stopped'">
                <field name="machine_name"/>
                <field name="machine_type"/>
                <field name="status" widget="badge"
                       decoration-success="status=='running'"
                       decoration-danger="status=='error'"
                       decoration-warning="status=='maintenance'"/>
                <field name="parts_processed_today"/>
                <field name="rejection_rate" widget="percentage"/>
                <field name="last_sync" widget="relative"/>
                <field name="is_active" widget="boolean_toggle"/>
                <button name="sync_machine_data_optimized" type="object" string="Quick Sync" icon="fa-refresh" class="btn-link"/>
            </list>
        </field>
    </record>

    <!-- Machine Configuration Form View -->
    <record id="view_machine_config_form" model="ir.ui.view">
        <field name="name">machine.config.form</field>
        <field name="model">manufacturing.machine.config</field>
        <field name="arch" type="xml">
            <form>
                <header>
                <button name="sync_machine_data_optimized" type="object" string="Quick Sync" class="btn-primary"
                        icon="fa-refresh" invisible= "machine_type == 'final_station'"/>
                <button name="force_full_sync" type="object" string="Full Sync" class="btn-warning"
                        icon="fa-bolt" invisible= "machine_type == 'final_station'"/>
                <button name="cancel_current_sync" type="object" string="Cancel Sync" class="btn-danger"
                        icon="fa-stop" invisible= "machine_type == 'final_station' or status != 'running'"/>
                    <button name="test_plc_connection" type="object" string="Test PLC" class="btn-secondary"
                            icon="fa-plug" invisible="machine_type != 'final_station'"/>
                    <button name="force_sync_all_machines" type="object" string="Force Sync All" class="btn-warning"
                            icon="fa-bolt" context="{'show_result': True}"/>

                    <button name="toggle_operation_mode" type="object" string="Toggle Mode" class="btn-info"
                            icon="fa-toggle-on" invisible="machine_type != 'final_station'"/>

                    <button name="manual_trigger_camera" type="object" string="Trigger Camera" class="btn-warning"
                            icon="fa-camera" invisible="machine_type != 'final_station'"/>

                    <button name="manual_cylinder_forward_action" type="object" string="Cylinder Forward"
                            class="btn-success"
                            icon="fa-arrow-right" invisible="machine_type != 'final_station'"/>

                    <button name="manual_cylinder_reverse_action" type="object" string="Cylinder Reverse"
                            class="btn-warning"
                            icon="fa-arrow-left" invisible="machine_type != 'final_station'"/>

                    <button name="start_auto_monitoring" type="object" string="Start Auto Monitoring"
                            class="btn-success"
                            icon="fa-play" invisible="machine_type != 'final_station'"/>

                    <button name="check_part_presence" type="object" string="Check Part Presence" class="btn-info"
                            icon="fa-search" invisible="machine_type != 'final_station'"/>

                    <field name="status" widget="statusbar" statusbar_visible="stopped,running,error,maintenance"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="action" name="%(action_part_quality)d" icon="fa-list-alt"
                                context="{'search_default_today': 1}">
                            <field string="Parts Today" name="parts_processed_today" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="sync_machine_data" icon="fa-refresh">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="rejection_rate" widget="float" options="{'precision': 1}"/>%
                                </span>
                                <span class="o_stat_text">Rejection Rate</span>
                            </div>
                        </button>
                    </div>
                    <!--                    <widget name="web_ribbon" title="Inactive" bg_color="bg-danger" modifiers="{'invisible': [('is_active', '=', True)]}"/>-->
                    <widget name="web_ribbon" title="Running" bg_color="bg-success"
                            invisible="status != 'running'"/>

                    <widget name="web_ribbon" title="Stopped" bg_color="bg-danger"
                            invisible="status != 'stopped'"/>

                    <widget name="web_ribbon" title="Error" bg_color="bg-warning"
                            invisible="status != 'error'"/>

                    <widget name="web_ribbon" title="Maintenance" bg_color="bg-info"
                            invisible="status != 'maintenance'"/>


                    <div class="oe_title">
                        <h1>
                            <field name="machine_name" placeholder="Machine Name..."/>
                        </h1>
                        <h2>
                            <field name="machine_type" widget="selection"/>
                        </h2>
                    </div>
                    <group>
                        <group name="basic_config" string="Basic Configuration">
                            <field name="csv_file_path" widget="char" placeholder="/path/to/csv/file.csv"/>
                            <field name="sync_interval" widget="integer"/>
                            <field name="sync_mode" optional="hide"/>
                            <field name="timezone" optional="hide"/>
                            <field name="is_active"/>
                        </group>
                        <group name="status_info" string="Status Information">
                            <field name="last_sync" widget="datetime"/>
                            <field name="parts_processed_today" readonly="1"/>
                            <field name="rejection_rate" widget="percentage" readonly="1"/>
                        </group>
                    </group>
                    <group name="advanced_config" string="Advanced Configuration" groups="base.group_system">
                        <group>
                            <field name="sync_interval" help="How often to check for new data (in seconds)"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Final Station Configuration"
                              invisible="machine_type != 'final_station'">
                            <group>
                                <group string="PLC Configuration">
                                    <field name="plc_ip_address"/>
                                    <field name="plc_port"/>
                                    <field name="plc_online" readonly="1"/>
                                    <field name="last_plc_communication"/>
                                </group>
                                <group string="Camera Configuration">
                                    <field name="camera_ip_address"/>
                                    <field name="camera_port"/>
                                    <field name="operation_mode" widget="radio"/>
                                </group>
                            </group>

                            <group>
                                <group string="Current Status">
                                    <field name="part_present" readonly="1"/>
                                    <field name="camera_triggered" readonly="1"/>
                                    <field name="cylinder_forward" readonly="1"/>
                                    <field name="cylinder_reverse" readonly="1"/>
                                </group>
                                <group string="Last Measurement">
                                    <field name="last_serial_number" readonly="1"/>
                                    <field name="last_capture_time" readonly="1"/>
                                    <field name="last_result" readonly="1"/>
                                </group>
                            </group>

                            <group>
                                <group string="Manual Controls">
                                    <field name="manual_camera_trigger"/>
                                    <field name="manual_cylinder_forward"/>
                                    <field name="manual_cylinder_reverse"/>
                                </group>
                            </group>
                        </page>

                        <page string="Measurements" name="measurements"
                              invisible="machine_type != 'final_station'">
                            <field name="measurement_ids" readonly="1">
                                <list limit="20">
                                    <field name="serial_number"/>
                                    <field name="capture_date"/>
                                    <field name="result" widget="badge"/>
                                    <field name="operation_mode"/>
                                    <field name="trigger_type"/>
                                    <field name="pass_rate" widget="percentage"/>
                                </list>
                            </field>
                        </page>

                        <page string="Gauging Configuration" name="gauging_config"
                              invisible="machine_type != 'gauging'">
                            <group>
                                <group string="Upper Tolerance Limit (UTL)">
                                    <field name="gauging_utl_degrees" string="Degrees"/>
                                    <field name="gauging_utl_minutes" string="Minutes"/>
                                    <field name="gauging_utl_seconds" string="Seconds"/>
                                </group>
                                <group string="Lower Tolerance Limit (LTL)">
                                    <field name="gauging_ltl_degrees" string="Degrees"/>
                                    <field name="gauging_ltl_minutes" string="Minutes"/>
                                    <field name="gauging_ltl_seconds" string="Seconds"/>
                                </group>
                            </group>
                            <group>
                                <group string="Nominal Value">
                                    <field name="gauging_nominal_degrees" string="Degrees"/>
                                    <field name="gauging_nominal_minutes" string="Minutes"/>
                                    <field name="gauging_nominal_seconds" string="Seconds"/>
                                </group>
                                <group string="Decimal Values (Auto-calculated)">
                                    <field name="gauging_upper_tolerance" string="UTL (Decimal)" readonly="1"/>
                                    <field name="gauging_lower_tolerance" string="LTL (Decimal)" readonly="1"/>
                                    <field name="gauging_nominal_value" string="Nominal (Decimal)" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <page string="Aumann Configuration" name="aumann_config"
                              invisible="machine_type != 'aumann'">
                            <header>
                                <button name="save_aumann_tolerances" type="object" string="Save Tolerances" 
                                        class="btn-primary" icon="fa-save"/>
                                <button name="load_aumann_tolerances" type="object" string="Load Tolerances" 
                                        class="btn-secondary" icon="fa-refresh"/>
                            </header>
                            <group>
                                <group string="Tolerance Configuration">
                                    <field name="aumann_tolerance_dirs" widget="char" 
                                           placeholder="C:\path\to\tolerances;D:\another\path"
                                           help="Directory paths containing JSON tolerance files (480.json, 980.json). Leave empty to use module default tolerances."/>
                                </group>
                            </group>
                            <group>
                                <group string="Intake Tolerances (Serial Prefix: 980)">
                                    <field name="aumann_intake_tolerances_json" widget="text" 
                                           placeholder='{"diameter_journal_a1": [23.959, 23.98], "diameter_journal_a2": [23.959, 23.98]}'/>
                                </group>
                                <group string="Exhaust Tolerances (Serial Prefix: 480)">
                                    <field name="aumann_exhaust_tolerances_json" widget="text" 
                                           placeholder='{"diameter_journal_a1": [23.959, 23.98], "diameter_journal_a2": [23.959, 23.98]}'/>
                                </group>
                            </group>
                            <div class="alert alert-info" role="alert">
                                <strong>JSON Format:</strong> Each field should have [lower_limit, upper_limit] values.<br/>
                                <strong>Example:</strong> {"diameter_journal_a1": [23.959, 23.98], "diameter_journal_a2": [23.959, 23.98]}
                            </div>
                        </page>
                    </notebook>
                </sheet>
                <!--                <div class="oe_chatter">-->
                <!--                    <field name="message_follower_ids"/>-->
                <!--                    <field name="message_ids"/>-->
                <!--                </div>-->
            </form>
        </field>
    </record>

    <!-- Machine Configuration Search View -->
    <record id="view_machine_config_search" model="ir.ui.view">
        <field name="name">machine.config.search</field>
        <field name="model">manufacturing.machine.config</field>
        <field name="arch" type="xml">
            <search>
                <field name="machine_name"/>
                <field name="machine_type"/>
                <filter name="active" string="Active" domain="[('is_active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('is_active', '=', False)]"/>
                <separator/>
                <filter name="running" string="Running" domain="[('status', '=', 'running')]"/>
                <filter name="error" string="Error" domain="[('status', '=', 'error')]"/>
                <filter name="maintenance" string="Maintenance" domain="[('status', '=', 'maintenance')]"/>
                <separator/>
                <!--                <filter name="high_rejection" string="High Rejection Rate" domain="[('rejection_rate', '>', 5)]"/>-->
                <group expand="0" string="Group By">
                    <filter string="Machine Type" name="group_type" context="{'group_by': 'machine_type'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Machine Configuration Action -->
    <record id="action_machine_config" model="ir.actions.act_window">
        <field name="name">Machine Configuration</field>
        <field name="res_model">manufacturing.machine.config</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first machine configuration!
            </p>
            <p>
                Configure your manufacturing stations (VICI Vision, Ruhlamat Press, Aumann Measurement)
                to start collecting quality control data in real-time.
            </p>
        </field>
    </record>
</odoo>