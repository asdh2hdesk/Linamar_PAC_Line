<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dynamic Final Station Dashboard View -->
    <record id="view_dynamic_final_station_dashboard" model="ir.ui.view">
        <field name="name">dynamic.final.station.dashboard</field>
        <field name="model">manufacturing.machine.config</field>
        <field name="arch" type="xml">
            <form string="Dynamic Final Station Dashboard" create="false" edit="false" delete="false">
                <header>
                    <button name="start_dynamic_final_station" type="object" string="Start Dynamic Mode"
                            class="btn-primary" icon="fa-cogs"/>
                    <button name="stop_auto_monitoring" type="object" string="Stop Auto Monitoring"
                            class="btn-warning" icon="fa-stop"/>
                    <field name="status" widget="statusbar" statusbar_visible="stopped,running,error,maintenance"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="test_plc_connection" type="object" string="Test PLC" class="oe_stat_button" icon="fa-plug"/>
                        <button name="manual_trigger_camera" type="object" string="Trigger Camera" class="oe_stat_button" icon="fa-camera"/>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="machine_name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="PLC Status">
                            <field name="plc_online" widget="boolean_toggle"/>
                            <field name="plc_ready_condition" widget="boolean_toggle"/>
                            <field name="last_plc_communication" readonly="1"/>
                        </group>
                        <group string="Dynamic Status">
                            <field name="auto_cycle_home" widget="boolean_toggle"/>
                            <field name="all_stations_passing" widget="boolean_toggle"/>
                            <field name="dashboard_data_available" widget="boolean_toggle"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Auto Monitoring">
                            <field name="auto_monitoring_active" widget="boolean_toggle"/>
                            <field name="cycle_count" readonly="1"/>
                            <field name="last_part_processed" readonly="1"/>
                            <field name="processing_part" widget="boolean_toggle"/>
                        </group>
                        <group string="Current Part">
                            <field name="part_present" widget="boolean_toggle"/>
                            <field name="camera_triggered" widget="boolean_toggle"/>
                            <field name="last_serial_number" readonly="1"/>
                            <field name="last_result" widget="badge"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Station Results">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>All Stations Status</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="alert alert-success" invisible="not all_stations_passing">
                                                <i class="fa fa-check-circle"></i> All Stations Passing ✅
                                            </div>
                                            <div class="alert alert-danger" invisible="all_stations_passing">
                                                <i class="fa fa-times-circle"></i> Some Stations Failing ❌
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>Dashboard Data</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="alert alert-info" invisible="not dashboard_data_available">
                                                <i class="fa fa-database"></i> Data Available
                                            </div>
                                            <div class="alert alert-warning" invisible="dashboard_data_available">
                                                <i class="fa fa-exclamation-triangle"></i> No Recent Data
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Dynamic Final Station Action -->
    <record id="action_dynamic_final_station_dashboard" model="ir.actions.act_window">
        <field name="name">Dynamic Final Station Dashboard</field>
        <field name="res_model">manufacturing.machine.config</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_dynamic_final_station_dashboard"/>
        <field name="domain">[('machine_type', '=', 'final_station')]</field>
        <field name="context">{'default_machine_type': 'final_station'}</field>
    </record>

    <!-- Menu Item for Dynamic Final Station -->
    <menuitem id="menu_dynamic_final_station" 
              name="Dynamic Final Station" 
              parent="menu_stations" 
              action="action_dynamic_final_station_dashboard" 
              sequence="60"/>
</odoo>
