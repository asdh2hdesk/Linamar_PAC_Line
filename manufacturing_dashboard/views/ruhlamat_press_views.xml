<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ruhlamat_press_list" model="ir.ui.view">
        <field name="name">ruhlamat.press.list</field>
        <field name="model">manufacturing.ruhlamat.press</field>
        <field name="arch" type="xml">
            <list decoration-success="result=='pass'" decoration-danger="result=='reject'">
                <field name="part_id1" string="Serial Number"/>
                <field name="machine_id"/>
                <field name="cycle_date" string="Test Date"/>
                <field name="program_name"/>
                <field name="station_name"/>
                <field name="ok_status" widget="boolean_toggle"/>
                <field name="total_gaugings"/>
                <field name="passed_gaugings"/>
                <field name="result" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_ruhlamat_press_form" model="ir.ui.view">
        <field name="name">ruhlamat.press.form</field>
        <field name="model">manufacturing.ruhlamat.press</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="result" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="part_id1" string="Serial Number"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="machine_id"/>
                            <field name="cycle_date" string="Cycle Date"/>
                            <field name="program_name"/>
                            <field name="program_id"/>
                        </group>
                        <group>
                            <field name="station_id"/>
                            <field name="station_name"/>
                            <field name="station_label"/>
                            <field name="ufm_username"/>
                        </group>
                    </group>

                    <group string="Cycle Information">
                        <group>
                            <field name="cycle_id"/>
                            <field name="ok_status"/>
                            <field name="cycle_status"/>
                            <field name="cycle_runtime_nc"/>
                            <field name="cycle_runtime_pc"/>
                        </group>
                        <group>
                            <field name="nc_runtime_cycle_no"/>
                            <field name="nc_total_cycle_no"/>
                            <field name="program_date"/>
                            <field name="ufm_version"/>
                            <field name="ufm_service_info"/>
                        </group>
                    </group>

                    <group string="Part Information">
                        <group>
                            <field name="part_id1" string="Serial Number"/>
                            <field name="part_id2"/>
                            <field name="part_id3"/>
                        </group>
                        <group>
                            <field name="part_id4"/>
                            <field name="part_id5"/>
                        </group>
                    </group>

                    <group string="Gauging Statistics">
                        <group>
                            <field name="total_gaugings"/>
                            <field name="passed_gaugings"/>
                            <field name="result"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Gaugings">
                            <field name="gauging_ids" context="{'default_cycle_id_ref': id}">
                                <list editable="bottom">
                                    <field name="gauging_no"/>
                                    <field name="gauging_alias"/>
                                    <field name="gauging_type"/>
                                    <field name="actual_x"/>
                                    <field name="actual_y"/>
                                    <field name="signal_x_unit"/>
                                    <field name="signal_y_unit"/>
                                    <field name="lower_limit"/>
                                    <field name="upper_limit"/>
                                    <field name="ok_status" widget="boolean_toggle"/>
                                    <field name="gauging_status"/>
                                    <field name="within_tolerance" widget="boolean_toggle"/>
                                    <field name="tolerance_status"/>

<!--                                    <field name="has_spc_chart" column_invisible="1"/>-->

<!--                                    &lt;!&ndash; Add SPC Chart button &ndash;&gt;-->
<!--                                    <button name="action_create_spc_chart"-->
<!--                                            type="object"-->
<!--                                            string="Create SPC"-->
<!--                                            class="btn-primary"-->
<!--                                            icon="fa-line-chart"-->
<!--                                            invisible="has_spc_chart"-->
<!--                                            help="Create SPC Chart from this gauging"/>-->

<!--                                    <button name="action_view_spc_chart"-->
<!--                                            type="object"-->
<!--                                            string="View SPC"-->
<!--                                            class="btn-success"-->
<!--                                            icon="fa-bar-chart"-->
<!--                                            invisible="not has_spc_chart"-->
<!--                                            help="View existing SPC Chart"/>-->
                                </list>
                                <form>
                                    <group>
                                        <group>
                                            <field name="gauging_id"/>
                                            <field name="gauging_no"/>
                                            <field name="gauging_alias"/>
                                            <field name="gauging_type"/>
                                            <field name="anchor"/>
                                        </group>
                                        <group>
                                            <field name="ok_status"/>
                                            <field name="gauging_status"/>
                                            <field name="limit_testing"/>
                                            <field name="within_tolerance"/>
                                            <field name="tolerance_status"/>
                                        </group>
                                    </group>

                                    <group string="Measurements">
                                        <group>
                                            <field name="actual_x"/>
                                            <field name="signal_x_unit"/>
                                            <field name="signal_x_name"/>
                                            <field name="signal_x_id"/>
                                        </group>
                                        <group>
                                            <field name="actual_y"/>
                                            <field name="signal_y_unit"/>
                                            <field name="signal_y_name"/>
                                            <field name="signal_y_id"/>
                                        </group>
                                    </group>

                                    <group string="Limits">
                                        <group>
                                            <field name="lower_limit"/>
                                            <field name="upper_limit"/>
                                            <field name="start_x"/>
                                            <field name="end_x"/>
                                        </group>
                                    </group>

                                    <group string="Additional Information">
                                        <group>
                                            <field name="running_no"/>
                                            <field name="abs_offset_x"/>
                                            <field name="abs_offset_y"/>
                                        </group>
                                        <group>
                                            <field name="edge_type_bottom"/>
                                            <field name="edge_type_left"/>
                                            <field name="edge_type_right"/>
                                            <field name="edge_type_top"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>

                        <page string="Custom Fields">
                            <group>
                                <group>
                                    <field name="custom_int1"/>
                                    <field name="custom_int2"/>
                                    <field name="custom_int3"/>
                                </group>
                                <group>
                                    <field name="custom_string1"/>
                                    <field name="custom_string2"/>
                                    <field name="custom_string3"/>
                                </group>
                            </group>
                            <field name="custom_xml" widget="text"/>
                        </page>
                    </notebook>

                    <group string="Rejection Details" modifiers="{'invisible': [('result', '=', 'pass')]}">
                        <field name="rejection_reason" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ruhlamat_press" model="ir.actions.act_window">
        <field name="name">Ruhlamat Press System</field>
        <field name="res_model">manufacturing.ruhlamat.press</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_group_by_machine': 1}</field>
        <field name="view_id" ref="view_ruhlamat_press_list"/>
    </record>
</odoo>