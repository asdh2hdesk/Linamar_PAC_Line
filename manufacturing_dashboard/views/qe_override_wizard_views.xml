<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- QE Override Wizard Form View -->
    <record id="view_qe_override_wizard_form" model="ir.ui.view">
        <field name="name">qe.override.wizard.form</field>
        <field name="model">manufacturing.qe.override.wizard</field>
        <field name="arch" type="xml">
            <form string="QE Override">
                <group>
                    <field name="part_quality_id" readonly="1"/>
                    <field name="new_result" required="1"/>
                    <field name="comments" required="1" placeholder="Enter reason for override..."/>
                </group>
                <footer>
                    <button name="action_override" type="object" string="Apply Override" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- QE Override Wizard Action -->
    <record id="action_qe_override_wizard" model="ir.actions.act_window">
        <field name="name">QE Override</field>
        <field name="res_model">manufacturing.qe.override.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_part_quality_id': active_id}</field>
    </record>
</odoo>
