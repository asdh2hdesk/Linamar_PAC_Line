        <!-- Category for Manufacturing Dashboard -->
        <record id="module_category_manufacturing_dashboard" model="ir.module.category">
            <field name="name">Manufacturing Dashboard</field>
            <field name="description">Manufacturing Dashboard Security Groups</field>
            <field name="sequence">50</field>
        </record>

        <!-- User Group - Read Only Access -->
        <record id="group_manufacturing_user" model="res.groups">
            <field name="name">Manufacturing User</field>
            <field name="category_id" ref="module_category_manufacturing_dashboard"/>
            <field name="comment">Read-only access to all manufacturing data. Can view all menus but cannot create, edit, or delete records.</field>
        </record>

        <!-- Production Group - Machine Config Edit, User Management -->
        <record id="group_manufacturing_production" model="res.groups">
            <field name="name">Manufacturing Production</field>
            <field name="category_id" ref="module_category_manufacturing_dashboard"/>
            <field name="comment">Can edit machine configuration, create users, and change passwords. Read access to all data.</field>
            <field name="implied_ids" eval="[(4, ref('group_manufacturing_user')), (4, ref('base.group_erp_manager'))]"/>
        </record>

        <!-- Quality Group - Machine Config Edit, Quality Override -->
        <record id="group_manufacturing_quality" model="res.groups">
            <field name="name">Manufacturing Quality</field>
            <field name="category_id" ref="module_category_manufacturing_dashboard"/>
            <field name="comment">Can edit machine configuration and use quality override function. Read access to all data.</field>
            <field name="implied_ids" eval="[(4, ref('group_manufacturing_user'))]"/>
        </record>

        <!-- Admin Group - Full Access -->
        <record id="group_manufacturing_admin" model="res.groups">
            <field name="name">Manufacturing Admin</field>
            <field name="category_id" ref="module_category_manufacturing_dashboard"/>
            <field name="comment">Full access: create, write, and delete all manufacturing records.</field>
            <field name="implied_ids" eval="[(4, ref('group_manufacturing_production')), (4, ref('group_manufacturing_quality'))]"/>
